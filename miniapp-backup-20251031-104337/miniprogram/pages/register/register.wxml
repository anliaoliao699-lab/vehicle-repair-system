<view class="register-container">
  <view class="header">
    <view class="title">创建账户</view>
    <view class="subtitle">维修服务系统</view>
  </view>

  <view class="form">
    <view class="input-group">
      <view class="label">姓名</view>
      <input
        type="text"
        placeholder="请输入姓名"
        value="{{name}}"
        bindinput="onNameInput"
        class="input"
      />
    </view>

    <view class="input-group">
      <view class="label">手机号</view>
      <input
        type="number"
        placeholder="请输入手机号"
        value="{{phone}}"
        bindinput="onPhoneInput"
        maxlength="11"
        class="input"
      />
    </view>

    <view class="input-group">
      <view class="label">密码</view>
      <input
        type="{{showPassword ? 'text' : 'password'}}"
        placeholder="至少6位"
        value="{{password}}"
        bindinput="onPasswordInput"
        class="input"
      />
    </view>

    <view class="input-group">
      <view class="label">确认密码</view>
      <input
        type="{{showPassword ? 'text' : 'password'}}"
        placeholder="再次输入密码"
        value="{{confirmPassword}}"
        bindinput="onConfirmPasswordInput"
        class="input"
      />
    </view>

    <view class="toggle">
      <text bindtap="togglePasswordVisibility">
        {{showPassword ? "隐藏密码" : "显示密码"}}
      </text>
    </view>

    <button
      type="primary"
      class="register-btn"
      bindtap="handleRegister"
      disabled="{{loading}}"
    >
      {{loading ? "注册中..." : "注册"}}
    </button>

    <view class="login-link">
      已有账号？
      <text class="link" bindtap="navigateToLogin">立即登录</text>
    </view>
  </view>
</view>