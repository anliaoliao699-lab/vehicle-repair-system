page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  height: 100vh;
}

.register-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
}

.header {
  flex: 0.5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

.form {
  flex: 1;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.input-group {
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.toggle {
  text-align: right;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #667eea;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #667eea !important;
  color: white;
  margin-bottom: 30rpx;
}

.login-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #667eea;
  font-weight: bold;
  margin-left: 10rpx;
}