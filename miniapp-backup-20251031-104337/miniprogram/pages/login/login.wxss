page {
  background: #f5f5f5;
}

.login-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.logo-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.logo-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
}

.form-area {
  flex: 1;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  padding: 50rpx 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
}

.login-btn {
  width: 100%;
  margin-top: 30rpx;
}