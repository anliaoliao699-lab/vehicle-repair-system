.empty-text-new {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 分配按钮 */
.btn-assign-new {
  width: 100%;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

.btn-assign-new .btn-icon {
  font-size: 36rpx;
}

.btn-assign-new:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* ========== ✅ 美化的派工弹窗样式 ========== */

.modal-mask-new {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal-mask-new.show {
  opacity: 1;
}

.modal-dialog-new {
  width: 92%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.3);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 弹窗头部 */
.modal-header-new {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.header-icon-new {
  font-size: 56rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.2));
}

.header-text-group {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-title-new {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  backdrop-filter: blur(10rpx);
}

.close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.close-icon {
  font-size: 40rpx;
  color: #fff;
  line-height: 1;
}

/* 弹窗主体 */
.modal-body-new {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx 24rpx;
  background: #f8f9fa;
}

/* 员工网格 */
.workers-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.worker-option-new {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.worker-option-new.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
}

/* 选中标识 */
.select-indicator {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 3rpx solid #ddd;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.select-indicator.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.check-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 员工头像（大） */
.worker-avatar-large {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.3);
}

.avatar-text-large {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

/* 员工信息 */
.worker-info-new {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.worker-name-new {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.worker-phone-new {
  font-size: 26rpx;
  color: #999;
}

/* 工种选择区域 */
.role-select-area {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.role-label-new {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
}

.role-picker {
  flex: 1;
}

.picker-display {
  background: #fff;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.picker-display:active {
  border-color: #667eea;
  background: #f0f4ff;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s;
}

/* 空状态（弹窗内） */
.empty-workers-new {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon-large {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text-large {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint-text {
  font-size: 26rpx;
  color: #bbb;
}

/* 弹窗底部 */
.modal-footer-new {
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.selected-info {
  text-align: center;
  padding: 12rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 8rpx;
}

.selected-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
}

.footer-buttons {
  display: flex;
  gap: 16rpx;
}

.modal-btn-new {
  flex: 1;
  padding: 28rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: bold;
  transition: all 0.3s;
}

.cancel-new {
  background: #f0f0f0;
  color: #666;
}

.cancel-new:active {
  background: #e0e0e0;
}

.confirm-new {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.confirm-new:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.confirm-new[disabled] {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

.confirm-new[loading] {
  opacity: 0.7;
}

/* ========== 响应式调整 ========== */

@media (max-width: 375px) {
  .assigned-workers-grid {
    grid-template-columns: 1fr;
  }
  
  .modal-dialog-new {
    width: 96%;
  }
  
  .worker-avatar-large {
    width: 80rpx;
    height: 80rpx;
  }
  
  .avatar-text-large {
    font-size: 40rpx;
  }
}