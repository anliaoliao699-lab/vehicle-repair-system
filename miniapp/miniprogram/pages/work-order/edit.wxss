  padding: 12px;
}

.worker-option {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12px;
  border: 1px solid #eee;
  border-radius: 6px;
  margin-bottom: 12px;
  background-color: #f8f8f8;
}

.worker-select-info {
  flex: 1;
}

.worker-option .worker-name {
  display: block;
  font-size: 14px;
  font-weight: bold;
