  color: #999;
  font-size: 12px;
}

/* ========== 弹窗底部按钮 ========== */

.assign-modal .modal-footer {
  display: flex;
  gap: 8px;
  padding: 12px;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.modal-btn {
  flex: 1;
  padding: 12px;
  font-size: 14px;
