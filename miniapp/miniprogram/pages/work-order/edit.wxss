.edit-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  padding-bottom: 200rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 40rpx 0 30rpx;
  margin-bottom: 20rpx;
}

.header-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 卡片样式 */
.form-card,
.images-card,
.work-items-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 35rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
}

.image-count,
.count-badge {
  font-size: 26rpx;
  color: #999999;
  font-weight: 400;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: auto;
}

/* 表单组 */
.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.label.required::after {
  content: ' *';
  color: #ff6b6b;
}

.char-count {
  font-size: 24rpx;
  color: #999999;
}

/* 输入框 */
.input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  background: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input.full-width {
  width: 100%;
}

/* 文本框 */
.textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8f8f8;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  transition: all 0.3s ease;
}

.textarea:focus {
  background: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 带图标的输入框 */
.input-with-icon {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 88rpx;
  transition: all 0.3s ease;
}

.input-with-icon:focus-within {
  background: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.currency-symbol {
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
  margin-right: 8rpx;
}

.cost-input {
  flex: 1;
  height: 88rpx;
  background: transparent;
  border: none;
  padding: 0;
  font-size: 28rpx;
  color: #333333;
}

.cost-input:focus {
  background: transparent;
  border: none;
}

/* ✅ 新增：工作项列表样式 */
.work-items-card {
  position: relative;
}

.work-items-list {
  margin-bottom: 20rpx;
}

.work-item {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border-left: 4rpx solid #667eea;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.item-status {
  font-size: 20rpx;
  color: #ffffff;
  background: #667eea;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-description {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

.item-actions {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
}

.item-delete-btn {
  height: 60rpx;
  background: #ff6b6b;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 0 16rpx;
  flex: 1;
}

.item-delete-btn:active {
  background: #ff5252;
  transform: scale(0.98);
}

/* 工作项统计 */
.items-summary {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 16rpx 0;
  border-top: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #666666;
  margin-right: 16rpx;
}

.summary-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* 添加项目按钮 */
.btn-add-item {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.btn-add-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15);
}

/* 图片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 50rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.delete-btn:active {
  background: rgba(0, 0, 0, 0.9);
  transform: scale(0.95);
}

.delete-icon {
  color: #ffffff;
  font-size: 40rpx;
  line-height: 1;
}

.upload-btn {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  background: #fafafa;
  border: 2rpx dashed #d0d0d0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.upload-btn:active {
  border-color: #667eea;
  background: #f0f4ff;
}

.upload-icon {
  font-size: 64rpx;
  color: #999999;
  margin-bottom: 12rpx;
  line-height: 1;
}

.upload-text {
  font-size: 26rpx;
  color: #999999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 20rpx 30rpx;
  background: linear-gradient(to top, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.98) 100%);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  line-height: 1;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666666;
}

.btn-cancel:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.btn-save {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-dialog {
  width: 600rpx;
  max-width: 85vw;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx 40rpx;
  animation: modalSlideUp 0.3s ease-out;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-dialog.work-item-form {
  padding: 40rpx 30rpx;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(60rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-icon {
  text-align: center;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-content {
  margin-bottom: 40rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.confirm-item {
  display: flex;
  align-items: flex-start;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.confirm-item:last-child {
  border-bottom: none;
}

.confirm-label {
  font-size: 28rpx;
  color: #666666;
  width: 140rpx;
  flex-shrink: 0;
}

.confirm-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  word-break: break-all;
}

.confirm-value.price {
  color: #ff6b6b;
  font-weight: bold;
  font-size: 32rpx;
}

.modal-buttons {
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666666;
}

.modal-btn.cancel:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.modal-btn.confirm:active {
  transform: scale(0.98);
}


