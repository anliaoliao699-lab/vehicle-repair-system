/* ========== 基础容器 ========== */
.detail-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

/* ========== 顶部状态卡片 ========== */
.status-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-badge {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.order-number {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* ✅ 车辆信息 - 黑色加粗大字 */
.vehicle-info-main {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.vehicle-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  line-height: 1.4;
  display: block;
  word-break: break-all;
}

/* ========== 已分配员工卡片 ========== */
.workers-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 40rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.count-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.workers-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.worker-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.worker-avatar-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.3);
}

.avatar-text-small {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.worker-info-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.worker-name-detail {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.worker-phone-detail {
  font-size: 26rpx;
  color: #999;
}

.worker-role-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* ========== 信息卡片 ========== */
.info-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  min-width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.info-value.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.info-value.price.highlight {
  color: #07c160;
}

.info-value.time {
  color: #999;
  font-size: 26rpx;
}

/* ========== 维修项目卡片 ========== */
.work-items-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.work-items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.work-item {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-name-row {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.item-status-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
  align-self: flex-start;
}

.item-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-left: 20rpx;
  white-space: nowrap;
}

.item-description {
  padding-top: 12rpx;
  border-top: 1rpx dashed #e0e0e0;
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
}

.desc-label {
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

.desc-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.items-summary {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.summary-price {
  font-size: 44rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* ========== 图片展示区域 ========== */
.images-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* ========== 操作按钮 ========== */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.06);
  z-index: 100;
}

.btn-edit {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn-edit:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 36rpx;
}

/* ========== 确认弹窗 ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-dialog {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx 40rpx;
  text-align: center;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.modal-btn.cancel {
  background: #f0f0f0;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* ========== 响应式 ========== */
@media (max-width: 375px) {
  .vehicle-text {
    font-size: 40rpx;
  }
  
  .image-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.btn-complete {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ae56 100%);
  color: #fff;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}