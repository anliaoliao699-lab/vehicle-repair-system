.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.logo-area {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
}

.logo-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.app-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
}

.form-area {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #999999;
}

.password-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding-right: 20rpx;
}

.password-input-wrapper .input-field {
  flex: 1;
  background: transparent;
  padding-right: 20rpx;
}

.toggle-password {
  font-size: 24rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
}

.forgot-password {
  text-align: right;
  margin-bottom: 30rpx;
  margin-top: -10rpx;
}

.forgot-link {
  font-size: 26rpx;
  color: #667eea;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  border: none;
  margin-top: 20rpx;
}

.login-btn[disabled] {
  opacity: 0.6;
}

.register-link {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-top: 40rpx;
}

.link-text {
  color: #667eea;
  font-weight: bold;
}

.footer-tip {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 60rpx;
}

