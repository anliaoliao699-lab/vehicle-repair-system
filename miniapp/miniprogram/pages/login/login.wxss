.agreement-area {
  display: flex;
  align-items: flex-start;
  margin: 30rpx 0;
  padding: 0 10rpx;
}

.checkbox-wrapper {
  padding: 6rpx;
  margin-right: 16rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #fff;
}

.checkbox.checked {
  background-color: #667eea;
  border-color: #667eea;
}

.agreement-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.agreement-text .link-text {
  color: #667eea;
}

/* 登录按钮禁用样式 */
.login-btn.disabled {
  opacity: 0.6;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗内容 */
.modal-content {
  width: 85%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
}

/* 弹窗内容区域 */
.modal-body {
  flex: 1;
  max-height: 60vh;
  padding: 30rpx;
}

.policy-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

.policy-intro {
  margin-bottom: 30rpx;
  color: #666;
}

.policy-section {
  margin-bottom: 30rpx;
}

.policy-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.policy-text {
  color: #666;
  white-space: pre-wrap;
}

.policy-update {
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 弹窗底部 */
.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #667eea;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.modal-btn::after {
  border: none;
}


