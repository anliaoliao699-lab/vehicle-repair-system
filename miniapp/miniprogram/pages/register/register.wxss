.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.logo-area {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form-area {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #999999;
}

.password-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding-right: 20rpx;
}

.password-input-wrapper .input-field {
  flex: 1;
  background: transparent;
  padding-right: 20rpx;
}

.toggle-password {
  font-size: 24rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
}

.role-picker {
  width: 100%;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333333;
}

.role-description {
  background: #f0f7ff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.desc-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.desc-item {
  display: flex;
  align-items: flex-start;
  margin-top: 10rpx;
}

.desc-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.desc-text {
  flex: 1;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  border: none;
  margin-top: 20rpx;
}

.register-btn[disabled] {
  opacity: 0.6;
}

.login-link {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-top: 30rpx;
}

.link-text {
  color: #667eea;
  font-weight: bold;
}

.footer-tip {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 30rpx;
}
.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
  line-height: 1.4;
}